{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <h1>Album</h1>
    {{ include('album/_logout_form.html.twig') }}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Artist</th>
                <td>{{ album.artist }}</td>
            </tr>
            <tr>
                <th>Album_name</th>
                <td>{{ album.albumName }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ album.year ? album.year|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_album_index') }}">back to list</a>

    <a href="{{ path('app_album_edit', {'id': album.id}) }}">edit</a>

    {% if role == 2 %}
        {{ include('album/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
